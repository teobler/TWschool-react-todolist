{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "object-literal-key-quotes": false,
    "object-literal-sort-keys": false,
    "member-access": false,
    "no-console": [true, "log", "error"],
    "max-classes-per-file": [false],
    "arrow-parens": false
  }
}
